<h1>Eat-A-Burger</h1>

<li>
	{{name}}

	<button class="change-devoured" data-id="{{id}}" data-newdevoured="{{devoured}}">
		{{#if devoured}}Don't eat me!{{else}}Eat me!{{/if}}
	</button>

	<button class="delete-burger" data-id="{{this.id}}">DELETE!</button>
</li>


<h2>Burgers that have not been eaten</h2>

<ul>
  {{#each burger}}
    {{#unless devoured}}
      {{> devoured=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers that have been eaten!</h2>

<ul>
  {{#each burger}}
    {{#if devoured}}
      {{> devoured=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="sleepy">Eaten?</label><br>
    <input type="radio" name="sleepy" value="1" checked> Eaten!<br>
    <input type="radio" name="sleepy" value="0"> Not Eaten!
  </div>

  <button type="submit">Add Burger</button>
</form>
